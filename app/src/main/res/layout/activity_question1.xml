<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Q1RelativeLayout"
    android:background="@color/colorGray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question1Activity">

    <ImageView
        android:id="@+id/Q1imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hetzertank" />

    <TextView
        android:id="@+id/Q1textView"
        android:layout_below="@id/Q1imageView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/colorBlack"
        android:text="Whats the name of \n this ww2 era tank?" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/Q1textView"
        android:layout_centerInParent="true"
        android:layout_marginTop="50pt"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginBottom="10pt"
            android:id="@+id/Q1button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25pt"
            android:text="Hetzer" />

        <Button
            android:id="@+id/Q1button2"
            android:layout_marginBottom="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Q1button1"
            android:text="Sherman" />

        <Button
            android:id="@+id/Q1button3"
            android:layout_below="@id/Q1button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25pt"
            android:text="Tiger" />

        <Button
            android:id="@+id/Q1button4"
            android:layout_below="@id/Q1button2"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/Q1button3"
            android:layout_height="wrap_content"
            android:text="Stuart" />
    </RelativeLayout>

</RelativeLayout>