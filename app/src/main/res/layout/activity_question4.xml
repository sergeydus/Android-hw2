<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Q3RelativeLayout"
    android:background="#4c6d12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question4Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:text="Question 4"
            android:layout_gravity="center"
            android:layout_weight="0.05"/>
        <ImageView
            android:id="@+id/Q4imageView"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            app:srcCompat="@drawable/t34"
            android:layout_weight="0.4"/>

        <TextView
            android:id="@+id/Q4textView"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:text="How is this TANK called?"
            android:layout_gravity="center"
            android:layout_weight="0.05"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_below="@id/Q4textView"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:weightSum="1">
            <LinearLayout
                android:layout_marginBottom="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/Q4button1"
                    android:layout_width="0px"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:text="T-34/76 Model 1942"
                    android:layout_weight="0.8" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_weight="0.25"
                >
                <Button
                    android:id="@+id/Q4button2"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:text="M4A3E8/76mm Sherman"
                    android:layout_weight="0.8"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_weight="0.25"
                >
                <Button
                    android:id="@+id/Q4button3"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:text="Pzkw VI Ausf E Tiger I"
                    android:layout_weight="0.8"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_weight="0.2"
                >

                <Button
                    android:id="@+id/Q4button4"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="Kliment Voroshilov 1 (kv-1)"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>